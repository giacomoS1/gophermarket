<%- include("partials/header.ejs") -%>
<body>
    <%- include("partials/navbar.ejs") %>
    
    <!-- Main content header -->
    <header class="text-center py-3 header-maroon">
        <h1>Gopher Marketplace</h1>
    </header>

    <!-- Main content with categories and products grid -->
    <div id="main-content" class="container mt-4">
        <div class="row">
            <!-- Categories sidebar with maroon and gold theme -->
            <aside id="categories" class="col-md-3">
                <ul class="list-group">
                    <li class="list-group-item">Vehicles</li>
                    <li class="list-group-item">Property Rentals</li>
                    <li class="list-group-item">Apparel</li>
                    <li class="list-group-item">Electronics</li>
                    <li class="list-group-item">Home & Garden</li>
                    <li class="list-group-item">Free Stuff</li>
                    <li class="list-group-item">More Categories...</li>
                </ul>
            </aside>

            <!-- Product Cards Section -->
            <section id="products-grid" class="col-md-9">
                <%- include("partials/productcards.ejs") %>
            </section>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <p>Â© 2024 Gopher Marketplace</p>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom Styles -->
    <style>
        /* Maroon and Gold theme */
        .header-maroon {
            background-color: #7A0019; /* Maroon */
            color: white;
        }
        .btn-gold {
            background-color: #FFCC33; /* Gold */
            color: #1E1E1E;
            border-radius: 8px;
        }
        .btn-gold:hover {
            background-color: #e6b830; /* Slightly darker gold on hover */
        }
        .card-maroon {
            background-color: #7A0019; /* Maroon */
            color: white;
        }
        .card-subtitle {
            color: #FFCC33; /* Gold */
        }
        /* Categories Sidebar Styling */
        #categories {
            background-color: #7A0019; /* Maroon */
            padding: 10px;
            border-radius: 8px;
            color: white; /* Default text color for sidebar */
        }
        #categories .list-group-item {
            background-color: transparent; /* Transparent to show sidebar color */
            color: #FFCC33; /* Gold text */
            border: none; /* Removes borders between items */
        }
        #categories .list-group-item:hover {
            background-color: #FFCC33; /* Gold on hover */
            color: #1E1E1E; /* Dark text on hover for readability */
        }
        footer {
            background-color: #7A0019; /* Maroon */
            color: white;
            padding: 10px;
        }
    </style>
</body>
</html>
